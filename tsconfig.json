{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
